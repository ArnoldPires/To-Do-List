<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <section class="contain">
        <h1>To Do List</h1>
        <section class="addATesk">
            <form action="/addTask" action="POST">
                <input type="text" placeholder="Type task here" name="content">
                <button type="submit">Submit</button>
            </form>
        </section>
        <section class="toDo">
            <ul> <!--todo-list-->
                <% todoList.forEach(details => { %>
                    <li>
                        <!--todo-list-item-->
                        <div class="todo-list-item"><%= details.content %></div>
                        <div class="ed">
                            <a href="/edit/<%= details._id %>"><button class="edit">Edit</button></a>
                            <a href="/remove/<%= details.id %>"><button class="delete">Delete</button></a>
                        </div>
                    </li>
               <% }) %>
            </ul>
        </section>
        <section class="complete"></section>
    </section>
</body>
<script src='js/main.js'></script>
</html>